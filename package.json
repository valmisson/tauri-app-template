{
  "name": "tauri-app-template",
  "version": "0.2.0",
  "description": "A template for building desktop applications with Tauri",
  "author": "Valmisson Grizorte <valmisson.github.io>",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/src-renderer"
  ],
  "scripts": {
    "dev": "cd packages && tauri dev",
    "build": "cd packages && tauri build",
    "dev:renderer": "cd packages/src-renderer && bun dev",
    "build:renderer": "cd packages/src-renderer && bun build",
    "lint": "cd packages/src-renderer && bun lint",
    "icons": "cd packages && tauri icon src-tauri/app-icon.png",
    "tauri": "cd packages && tauri"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.3",
    "lint-staged": "^16.1.5",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "packages/src-renderer/src/**/*.ts": [
      "bun lint --fix"
    ]
  },
  "engines": {
    "node": ">=22.18.x"
  }
}
